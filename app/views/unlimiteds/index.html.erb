<div id="content">
  <div class="adsense">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- RandomImage -->
    <ins class="adsbygoogle"
           style="display:inline-block;width:728px;height:90px"
           data-ad-client="ca-pub-9646834340680693"
           data-ad-slot="1854367857"></ins>
         <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>


  <div about="<%= @image.image_url%>" xmlns:dct="http://purl.org/dc/terms/" xmlns:cc="http://creativecommons.org/ns#"> 
    <div class="image_content">
      <%= link_to (image_tag @image.image_url, alt: "IMG"), root_path  %>
    </div>

    <% @image.image_url %>
    <% @image.original_url %>

    </br><br/>
    <div class="cc-image-div">
      <% if @image.cc_code == 1 %>
        <%= image_tag "ccby.png", alt: "CC-BY", class: "cc-image" %>
      <% elsif @image.cc_code == 2 %>
        <%= image_tag "ccbynd.png", alt: "CC-BY-ND", class: "cc-image" %>
      <% elsif @image.cc_code == 3 %>
        <%= image_tag "ccbysa.png", alt: "CC-BY-SA", class: "cc-image" %>
      <% else %>
      <% end %>
    </div>

    <div class="license-text">
      Entitled <span property="dct:title"><%= link_to @image.owner_name, @image.owner_link  %> </span> <br/>
    </div>
  </div>

  <div class="license-text">
    Now <span> <%= Unlimited.count %>'s Pictures</span> <br/>
  </div>
  <div class="adsense">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
